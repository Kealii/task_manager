<html lang ='en'>
  <head>
    <title>All Tasks</title>
    <link href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css' rel='stylesheet'>
  </head>

    <body class='bg-primary'>
      <div class='col-md-12 navbar navbar-inverse navbar-static-top'>
        <a class='navbar-brand'><strong>All Tasks</strong></a>
        <ul class='nav navbar-nav navbar-right'>
          <li><a href = '/'>Task Manager</a></li>
        </ul>
      </div>

      <div class='container'>
        <div class='row well' id='container'>
          <div class='col-md-6'>
            <ol style="font-weight: bold;">
              <% @tasks.each do |task| %>
              <li><a href="/tasks/<%= task.id %>"><%= task.title %></a></li>
              <a href="/tasks/<%= task.id %>/edit" class='btn btn-info'>Edit</a>
              <form action="/tasks/<%= task.id %>" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <input type="submit" class='btn btn-danger' value="delete"/>
              </form>
              <% end %>
            </ol>
          </div>
        </div>
      </div>

  <script src="http://code.jquery.com/jquery-1.11.3.min.js"></script>
  <script src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
  <script src='js/bootstrap.js'></script>
  </body>
</html